<footer class="footer text-sm container mx-auto flex justify-between py-32">
  <ul class="space-y-2">
    <li>
      <p class="">
        <%= __('blog.totalpost') %>&#58; <%= site.posts.length %> 篇
      </p>
    </li>
    <li>
      <p class="flex items-center">
        <span class="mr-2"
          ><%= __('blog.wordcount') %>&#58; <%= totalcount(site) %></span
        >
      </p>
    </li>
    <li>
      <a
        class=""
        rel="noopener"
        href="https://github.com/xrr2016/hexo-theme-cold-stone"
        target="_blank"
        >Theme Cold Stone</a
      >
    </li>
    <li>
      <p>
        Copyright&nbsp;&copy;&nbsp;<a href="<%- config.root %>"
          ><%- config.author %></a
        >
      </p>
    </li>
  </ul>

  <ul class="space-y-2">
    <% if (config.sns.github) { %>
    <li>
      <a
        class=""
        target="_blank"
        rel="noopener"
        href="https://github.com/<%= config.sns.github %>"
        >Github</a
      >
    </li>
    <% } %> <% if (config.sns.juejin) { %>
    <li>
      <a
        class=""
        target="_blank"
        rel="noopener"
        href="https://juejin.im/user/<%= config.sns.juejin %>"
        >掘金</a
      >
    </li>
    <% } %> <% if (config.sns.segmentfault) { %>
    <li>
      <a
        class=""
        target="_blank"
        rel="noopener"
        href="https://segmentfault.com/u/<%= config.sns.segmentfault %>/articles"
        >思否</a
      >
      <% } %>
    </li>
    <% if (config.sns.zhihu) { %>
    <li>
      <a
        class="about-link"
        target="_blank"
        rel="noopener"
        href="https://zhihu.com/people/<%= config.sns.zhihu %>/posts"
        >知乎</a
      >
    </li>
    <% } %> <% if (config.sns.leetcode) { %>
    <li>
      <a
        class="about-link"
        target="_blank"
        rel="noopener"
        href="https://leetcode-cn.com/u/<%= config.sns.leetcode %>"
        >力扣</a
      >
    </li>
    <% } %> <% if (config.sns.twitter) { %>
    <li>
      <a
        class="about-link"
        target="_blank"
        rel="noopener"
        href="https://twitter.com/<%= config.sns.twitter %>"
        >Twitter</a
      >
      <% } %>
    </li>
    <li>
      <a class="" href="<%= config.root %>atom.xml">
        <svg
          class="w-4 h-4"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 5c7.18 0 13 5.82 13 13M6 11a7 7 0 017 7m-6 0a1 1 0 11-2 0 1 1 0 012 0z"
          />
        </svg>
      </a>
    </li>
  </ul>

  <ul class="space-y-2">
    <li>
      <a class="friend-link" href="https://kalasearch.cn/blog" target="_blank"
        >卡拉搜索</a
      >
    </li>
    <li>
      <a class="" href="https://blog.inmind.ltd/" target="_blank"
        >Mind's blog</a
      >
    </li>
    <li>
      <a class="" href="https://oldchen.top/flutter-blog/#/" target="_blank"
        >老晨子</a
      >
    </li>
    <li>
      <a class="" href="https://www.v2fy.com/" target="_blank">猫爪导航🐱</a>
    </li>
    <li>
      <a class="" href="https://wxsm.space" target="_blank">wxsm's space</a>
    </li>
  </ul>
</footer>
